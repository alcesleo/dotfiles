# Reset the path to not add things multiple times
if [ -f /etc/profile ]; then
    PATH=""
    source /etc/profile
fi

# brew --prefix is actually fairly expensive, and the startup time suffers
# when using these more generic declarations:
#
# PATH=$(brew --prefix coreutils)/libexec/gnubin:$PATH
# PATH=$(brew --prefix ctags)/bin:$PATH
# PATH=$PATH:$(brew --prefix git)/share/git-core/contrib/diff-highlight

# Prepend
PATH=~/.bin:$PATH
PATH=./bin:$PATH
PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH
PATH=/usr/local/opt/ctags/bin:$PATH

# Append
PATH=$PATH:/Applications/Postgres.app/Contents/Versions/9.4/bin
PATH=$PATH:/usr/local/opt/git/share/git-core/contrib/diff-highlight

export PATH
