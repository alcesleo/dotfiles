# remaps, these CHANGE preexisting commands
alias ls='ls -G' # color all output
alias git='noglob hub'

# git
alias g='git'
alias gs='git status --short'
alias ga='git add --all'
alias gb='git browse'
alias gc='git commit -m'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git log --oneline'
alias gp='git push'

# ruby
alias r='rails'
alias b='bundle'
alias be='bundle exec'
alias pryr='pry -r ./config/environment' # open pry with rails env

# navigation
alias aliases='vim ~/.zsh/aliases'
alias p='cd ~/Projects'
alias d='cd ~/Dropbox'
alias df='cd ~/Projects/dotfiles'
alias n='cd ~/Dropbox/notes/ && vim'

# other
alias nzbsync='cp ~/Downloads/*.nzb /Volumes/Data/Downloads/nzbs && rm ~/Downloads/*.nzb'
alias pessimize='pessimize --no-backup'
alias c='pygmentize -O style=monokai -f console256 -g'
