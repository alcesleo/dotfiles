shopt -s expand_aliases

alias b='bundle'
alias be='bundle exec'
alias ccat='pygmentize -O style=monokai -f console256 -g'
alias d='docker'
alias dc='docker-compose'
alias e='emacs'
alias g='git'
alias git='hub'
alias la='ls -lha --color'
alias ls='ls --color -1' # color the output and put every entry on its own line
alias mark='open -F -a Marked\ 2'
alias path='echo $PATH | tr : \\n'
alias src='source ~/.bashrc'
alias v='nvim'

# Key combination aliases
bind -x '"S":"git status --short"' # M-S-s
bind -x '"L":"la"'                 # M-S-l

# work
alias jail='date +"jail_%Y-%m-%d"'

# cd to location of topmost Finder window
function cdf() {
    cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')"
}

# cd to root of git repo
function cdr() {
   git rev-parse --show-toplevel > /dev/null && cd $(git rev-parse --show-toplevel)
}

# mkdir and enter it
function mkd() {
    mkdir -p "$@" && cd "$@"
}

# Example: `calc 5*6`
function calc() {
    bc -l <<< "$@"
}
