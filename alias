shopt -s expand_aliases

# Remaps, you can always access the unaliased version by prepending \
alias ls='ls -G -1' # color the output and put every entry on its own line
alias git='hub'

alias src='source ~/.bashrc'
alias tac='tail -r'

# vim
alias v='nvim'
alias vp='v +CtrlP'
alias vd='v -d' # neovimdiff

# git
alias g='git'

# ruby
alias reh='rbenv rehash'
alias r='rails'
alias b='bundle'
alias be='bundle exec'

# other
alias c='pygmentize -O style=monokai -f console256 -g'
alias d='docker'
alias dc='docker-compose'
alias dm='docker-machine'
alias jason='python -m json.tool'
alias mark='open -F -a Marked\ 2'
alias nzbsync='cp ~/Downloads/*.nzb /Volumes/Data/Downloads/nzbs && rm ~/Downloads/*.nzb'
alias wiki='vp ~/Dropbox/wiki/'

# work
alias dock='docker-compose -f docker-compose-infrastructure.yml -f docker-compose.yml'
alias jail='date +"jail_%Y-%m-%d"'

# cd to location of topmost Finder window
function cdf() {
    cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')"
}

# cd to root of git repo
function cdr() {
    TEMP_DIR=$(pwd)
    while ! [ -d .git ]; do
        cd ..
    done
    OLDPWD=$TEMP_DIR
}

# mkdir and enter it
function mkd() {
    mkdir -p "$@" && cd "$@"
}

# Example: `calc 5*6`
function calc () {
    bc -l <<< "$@"
}
