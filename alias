shopt -s expand_aliases

# Remaps, you can always access the unaliased version by prepending \
alias ls='ls --color -1' # color the output and put every entry on its own line
alias git='hub'

alias src='source ~/.bashrc'
alias la='grc ls -lha --color'

# vim
alias v='nvim'
alias vp='v +CtrlP'
alias vd='v -d' # neovimdiff

# git
alias g='git'
alias ga='git add --all'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git log --oneline --decorate -15'
alias gs='git status --short'

# ruby
alias reh='rbenv rehash'
alias r='rails'
alias b='bundle'
alias be='bundle exec'

# other
alias c='pygmentize -O style=monokai -f console256 -g'
alias d='docker'
alias dc='docker-compose'
alias dm='docker-machine'
alias j='jrnl'
alias jason='python -m json.tool'
alias jw='jrnl work'
alias mark='open -F -a Marked\ 2'
alias nzbsync='cp ~/Downloads/*.nzb /Volumes/Data/Downloads/nzbs && rm ~/Downloads/*.nzb'
alias path='echo $PATH | tr : \\n'
alias wiki='vp ~/Dropbox/wiki/'

# work
alias jail='date +"jail_%Y-%m-%d"'

# cd to location of topmost Finder window
function cdf() {
    cd "$(osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)')"
}

# cd to root of git repo
function cdr() {
   git rev-parse --show-toplevel > /dev/null && cd $(git rev-parse --show-toplevel)
}

# mkdir and enter it
function mkd() {
    mkdir -p "$@" && cd "$@"
}

# Example: `calc 5*6`
function calc() {
    bc -l <<< "$@"
}
