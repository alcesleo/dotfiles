[user]
    name  = Jimmy BÃ¶rjesson
    email = alcesleo@gmail.com

[github]
    user = alcesleo

[alias]
    b  = branch
    cl = clone
    cm = commit
    co = checkout
    d  = diff
    ds = diff --staged
    dt = difftool
    f  = fetch
    lo = log --oneline
    l  = log
    pl = pull
    ps = push
    s  = status --short

    amend         = commit --amend
    sf            = !git status --short | awk '{ print $2 }'
    bd            = branch --delete
    changed-files = show --pretty="format:" --name-only
    changelog     = !git log --oneline `git describe --abbrev=0`..HEAD
    cob           = checkout -b
    plush         = !git pull --rebase && git push
    com           = checkout master
    ctags         = !.git/hooks/ctags
    fix           = commit --amend -C HEAD
    forget        = update-index --assume-unchanged
    forgotten     = !git ls-files -v | grep ^[a-z]
    h             = browse
    iss           = browse -- issues
    pop           = stash pop
    pr            = pull-request
    pro           = !git push && hub pull-request -o
    prs           = browse -- pulls
    pulled        = log -p --reverse --no-merges --stat @{1}..
    pure          = pull --rebase
    remember      = update-index --no-assume-unchanged
    sha           = rev-parse --short HEAD
    stu           = stash --include-untracked
    stashes       = stash list
    supdate       = submodule update --init --recursive
    tfo           = !git reset . && git checkout -- . && git clean -fd
    todo          = grep --line-number -E "(TODO|FIXME).*"
    tree          = log --graph --oneline --decorate --all
    uncommit      = reset --soft HEAD^
    unstage       = reset
    yolo          = push --force

[core]
    excludesfile = ~/.gitignore

[init]
    templatedir = ~/.git_template

[color]
    diff   = auto
    status = auto
    branch = auto
    ui     = true

[fetch]
    prune = true

[push]
    default = current

[diff]
    tool      = vimdiff
    algorithm = patience

[credential]
    helper = osxkeychain

[filter "trimWhitespace"]
    clean = git-stripspace

[rerere]
    enabled    = true
    autoupdate = true
