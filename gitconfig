[user]
    name  = Jimmy BÃ¶rjesson
    email = alcesleo@gmail.com

[github]
    user = alcesleo

[alias]
    br = branch
    ci = commit
    cl = clone
    co = checkout
    di = diff
    ds = diff --staged
    dt = difftool
    ff = pull --ff-only
    pr = pull-request
    st = status

    amend         = commit --amend
    changed-files = show --pretty="format:" --name-only
    changelog     = !git log --oneline `git describe --abbrev=0`..HEAD
    fix           = commit --amend -C HEAD
    forget        = update-index --assume-unchanged
    forgotten     = !git ls-files -v | grep ^[a-z]
    pulled        = log -p --reverse --no-merges --stat @{1}..
    remember      = update-index --no-assume-unchanged
    stashes       = stash list
    supdate       = submodule update --init --recursive
    tfo           = !git checkout -- . && git clean -fd
    todo          = grep --line-number -E "(TODO|FIXME).*"
    tree          = log --graph --oneline --decorate --all
    yolo          = push --force

[core]
    excludesfile = ~/.gitignore

[color]
    diff   = auto
    status = auto
    branch = auto
    ui     = true

[push]
    default = current

[diff]
    tool      = vimdiff
    algorithm = patience

[credential]
    helper = osxkeychain

[filter "trimWhitespace"]
    clean = git-stripspace

[rerere]
    enabled    = true
    autoupdate = true
